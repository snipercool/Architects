{
  "name": "Nicolasvh",
  "version": "1.0.0",
  "description": "Theme for Nicolasvh",
  "author": "Automattic Theme Team",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/Automattic/_s#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "jquery": "^3.5.1",
    "jquery-ui": "^1.12.1",
    "masonry-layout": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  },
  "devDependencies": {
    "@wordpress/scripts": "^23.3.0",
    "dir-archiver": "^1.1.1",
    "rtlcss": "^3.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "build:sass": "sass  --no-source-map ./src/scss:dist/css",
    "build:js": "terser ./src/js/*.js -o dist/js/app.min.js",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* dist",
    "copy:html": "copyfiles -u 1 ./src/*.html dist",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:html",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch ./src/scss:dist/css",
    "watch:js": "terser ./src/js/*.js -o dist/js/app.min.js",
    "watch": "npm-run-all --parallel watch:*",
    "start": "npm-run-all copy --parallel watch",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss dist/css/*.css -u autoprefixer cssnano -r --no-map"
  }
}